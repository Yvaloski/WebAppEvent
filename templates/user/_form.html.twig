<div class="profil">
    {{ form_start(form) }}

    <div class="row">
        <div class="col-md-6">
            <div class="mb-3">
                <label for="{{ form.email.vars.id }}" class="form-label">Email:</label>
                {{ form_widget(form.email, {'attr': {'class': 'form-control mb-2'}}) }}
            </div>
        </div>
        <div class="col-md-6">
            <div class="mb-3">
                <label for="{{ form.pseudo.vars.id }}" class="form-label">Pseudo:</label>
                {{ form_widget(form.pseudo, {'attr': {'class': 'form-control mb-2'}}) }}
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="mb-3">
                <label for="{{ form.nom.vars.id }}" class="form-label">Nom:</label>
                {{ form_widget(form.nom, {'attr': {'class': 'form-control mb-2'}}) }}
            </div>
        </div>
        <div class="col-md-6">
            <div class="mb-3">
                <label for="{{ form.prenom.vars.id }}" class="form-label">Prénom:</label>
                {{ form_widget(form.prenom, {'attr': {'class': 'form-control mb-2'}}) }}
            </div>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6">
            <div class="mb-3">
                <label for="{{ form.telephone.vars.id }}" class="form-label">Téléphone:</label>
                {{ form_widget(form.telephone, {'attr': {'class': 'form-control mb-2'}}) }}
            </div>
        </div>
        <div class="col-md-6">
            <div class="mb-3">
                <label for="{{ form.photoFile.vars.id }}" class="form-label">Photo de profil:</label>
                {{ form_widget(form.photoFile, {'attr': {'class': 'form-control mb-2'}}) }}
                {{ form_errors(form.photoFile) }}

            </div>
        </div>
    </div>

    <div class="form-row">
        <div class="form-group col-md-12">
            <label for="{{ form.plainPassword.vars.id }}" class="col-form-label">Nouveau mot de passe:</label>
            {{ form_widget(form.plainPassword, {'attr': {'class': 'form-control mb-2'}}) }}
        </div>
        <div class="form-group col-md-12">
            <label for="{{ form.password.vars.id }}" class="col-form-label">Mot de passe actuel:</label>
            {{ form_widget(form.password, {'attr': {'class': 'form-control mb-2'}}) }}
        </div>
    </div>

</div>
<div class="mt-4">
    <button class="btn buttonBleuVert mr-3">{{ button_label|default('Save') }}</button>
</div>
    {{ form_end(form) }}

